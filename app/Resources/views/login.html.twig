{% extends 'base.html.twig' %}

{% block title %}
	EXPOS cargo | Welcome, Logistics Management System
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/base/style.bundle-NEW.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/vendors/base/vendors.bundle.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/vendors/custom/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet" type="text/css" />
	<link href="{{ asset('assets/vendors/custom/jquery-ui/jquery-ui.bundle.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block body %}
    <h1>Welcome</h1>
    <br>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<form action="{{ path('login') }}" method="post">
		<label for="username">Username:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" />

		<label for="password">Password:</label>
		<input type="password" id="password" name="_password" value="hola" />

		{#
			If you want to control the URL the user
			is redirected to on success (more details below)
			<input type="hidden" name="_target_path" value="/account" />
		#}
			<input type="hidden" name="_target_path" value="/team" />

		<button type="submit">login</button>
	</form>
{% endblock %}

{% block javascripts %}
		<script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.16/webfont.js"></script>

		<script>
          WebFont.load({
            google: {"families":["Poppins:300,400,500,600,700","Roboto:300,400,500,600,700"]},
            active: function() {
                sessionStorage.fonts = true;
            }
          });
		</script>

		<!-- Base -->
		<script src="{{ asset('assets/vendors/base/vendors.bundle.js') }}" type="text/javascript"></script>
		<script src="{{ asset('assets/base/scripts.bundle.js') }}" type="text/javascript"></script>

		<!-- Resources -->
		<script src="{{ asset('assets/custom/components/forms/widgets/dropzone.js') }}" type="text/javascript"></script>
		<script src="{{ asset('assets/custom/components/datatables/base/table-project.js') }}" type="text/javascript"></script>

		<!-- Vendors -->
		<script src="{{ asset('assets/vendors/custom/fullcalendar/fullcalendar.bundle.js') }}" type="text/javascript"></script>
		<script src="{{ asset('assets/vendors/custom/jquery-ui/jquery-ui.bundle.js') }}" type="text/javascript"></script>

		<!-- Snippets -->
		<script src="{{ asset('assets/custom/components/portlets/draggable.js') }}" type="text/javascript"></script>
		<script src="{{ asset('assets/app/js/dashboard.js') }}" type="text/javascript"></script>
{% endblock %}
