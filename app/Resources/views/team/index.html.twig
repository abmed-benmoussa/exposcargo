{% extends 'base.html.twig' %}

{% block title %}EXPOS cargo | Logistics Management System{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('assets/vendors/custom/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/vendors/base/vendors.bundle.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/base/style.bundle-NEW.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body %}
    <h1>Teams list</h1>
    <br>

    <table class="m-page__container">
        <thead>
            <tr>
                <th>Name</th>
                <th>Leaderiduser</th>
                <th>Leadersince</th>
                <th>Leaderuntil</th>
                <th>Idteam</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td><a href="{{ path('team_show', { 'idteam': team.idteam }) }}">{{ team.name }}</a></td>
                <td>{{ team.leaderiduser }}</td>
                <td>{% if team.leadersince %}{{ team.leadersince|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if team.leaderuntil %}{{ team.leaderuntil|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ team.idteam }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('team_show', { 'idteam': team.idteam }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('team_edit', { 'idteam': team.idteam }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('team_new') }}">Create a new team</a>
        </li>
    </ul>
{% endblock %}

