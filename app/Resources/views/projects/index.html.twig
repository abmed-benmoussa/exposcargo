		<link href="{{ asset('assets/vendors/custom/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet" type="text/css" />
		<link href="{{ asset('assets/base/style.bundle-NEW.css') }}" rel="stylesheet" type="text/css" />

		<link rel="shortcut icon" href="{{ asset('assets/media/img/logo/favicon.ico') }}" />
	</head>

	<!-- BODY -->
	<body class="m-page--wide m-header--fixed m-header--fixed-mobile m-footer--push m-aside--offcanvas-default"  >
		<div class="m-grid m-grid--hor m-grid--root m-page">

			<!-- HEADER -->
			<header class="m-grid__item	m-header " data-minimize="minimize" data-minimize-offset="200" data-minimize-mobile-offset="200" >
				<div class="m-header__top">
					<div class="m-container m-container--responsive m-container--xxl m-container--full-height m-page__container">
						<div class="m-stack m-stack--ver m-stack--desktop">

{% include 'projects/header-page.html.twig' %}

                                                </div>
					</div>
				</div>
				<div class="m-header__bottom">
					<div class="m-container m-container--responsive m-container--xxl m-container--full-height m-page__container">
						<div class="m-stack m-stack--ver m-stack--desktop">
							{% include 'projects/bar-menu.html.twig' %}
							{% include 'projects/global-search.html.twig' %}
						</div>
					</div>
				</div>
			</header>

			<!-- MAIN -->
			<div class="m-grid__item m-grid__item--fluid m-grid m-grid--hor-desktop m-grid--desktop m-body">
				<div class="m-grid__item m-grid__item--fluid  m-grid m-grid--ver m-container m-container--responsive m-container--xxl m-page__container">
					<div class="m-grid__item m-grid__item--fluid m-wrapper">
						<div class="m-subheader ">
							{% use 'projects/subheader-page.html.twig' %}
						</div>
						<div class="m-content">
							{% include 'projects/body-page.html.twig' %}
						</div>
					</div>
				</div>
			</div>

			<!-- FOOTER -->
			{% include 'projects/footer-page.html.twig' %}
		</div>

		<!-- CHAT -->
		<div id="m_quick_sidebar" class="m-quick-sidebar m-quick-sidebar--tabbed m-quick-sidebar--skin-light">
			{% include 'projects/chat.html.twig' %}
		</div>

		<!-- SCROLL Top -->
		<div class="m-scroll-top m-scroll-top--skin-top" data-toggle="m-scroll-top" data-scroll-offset="500" data-scroll-speed="300">
			<i class="la la-arrow-up"></i>
		</div>

		<!-- SCRIPTS - begin -->
		<!-- Base -->
		<script src="{{ asset('assets/vendors/base/vendors.bundle.js') }}" type="text/javascript"></script>
		<script src="{{ asset('assets/base/scripts.bundle.js') }}" type="text/javascript"></script>

		<!-- Resources -->
		<script src="{{ asset('assets/custom/components/forms/widgets/dropzone.js') }}" type="text/javascript"></script>
                <script src="{{ asset('assets/custom/components/datatables/base/table-project.js') }}" type="text/javascript"></script>

