{% extends 'base.html.twig' %}

{% block title %}EXPOS cargo | Welcome, Logistics Management System{% endblock %}

{% block stylesheets %}

    <link href="{{ asset('assets/vendors/custom/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/vendors/base/vendors.bundle.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('assets/base/style.bundle-NEW.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body %}
    <h1>Welcome</h1>
    <br>
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" />

    <label for="password">Password:</label>
    <input type="password" id="password" name="_password" value="hola" />

    {#
        If you want to control the URL the user
        is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}
        <input type="hidden" name="_target_path" value="/team" />

    <button type="submit">login</button>
</form>


{% endblock %}

